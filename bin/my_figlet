#!/bin/bash

if [ ! -x $(which figlet) ] ; then
  #
  echo "error: figlet is not installed"
fi

comment="\#"
while getopts ":c:" opt; do
  case $opt in
    c) comment="$OPTARG"
    ;;
    \?) echo "Invalid option -$OPTARG" >&2
    ;;
  esac
done
shift $((OPTIND-1))
str=$@

font=big
if test -f $HOME/.local/share/figlet/starwars.flf; then
  font="starwars -d ~/.local/share/figlet"
fi

repl() { printf "$1"'%.s' $(eval "echo {1.."$(($2))"}"); }


size=$(echo -n $2 | wc -m)

minSize=40
if (( $size < $minSize )) ; then
  size=$minSize
fi

cmd="figlet -t $str -f $font | sed -E \"s/^(.)/$comment  \1/g\""

size=$(bash -c "$cmd" | xargs -I {} bash -c "echo '{}' | wc -m" | sort -h | tail -n 1)

if (( $size > 80 )) ; then
  font=big
  size=$(bash -c "$cmd" | xargs -I {} bash -c "echo '{}' | wc -m" | sort -h | tail -n 1)
  cmd="figlet -t $str -f $font | sed -E \"s/^(.)/$comment  \1/g\""
fi

repl $comment $size
echo "$comment"
echo "$comment"
bash -c "$cmd"
echo "$comment  $str"
repl $comment $size
echo
